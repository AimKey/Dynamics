@using Dynamics.Utility
@using Newtonsoft.Json
@inject IHttpContextAccessor Accessor
@model Dynamics.Models.Models.OrganizationToProjectHistory


@{
    ViewData["Title"] = "SendResoueceOrganizationToProject";
    Layout = "_LayoutOrganization";
}

@{
    var currentOrganizationResource = Accessor.HttpContext.Session.Get<OrganizationResource>(MySettingSession.SESSION_Organization_Resource_Current_Key);

    var projectsInAOragnization = Accessor.HttpContext.Session.Get<List<Project>>(MySettingSession.SESSION_Projects_In_A_OrganizationID_Key);
}

<div class="py-5 pt-12 px-5 flex justify-center">
    <div class="border border-solid border-gray-500 rounded-box px-5 py-5 w-auto">
        <h1 class="text-3xl font-semibold mb-10 text-center ">
            Send Resource
        </h1>
        <form asp-action="SendResoueceOrganizationToProject" asp-controller="Organization" class="bg-white p-8 rounded-lg shadow-md w-80">
            <div>
                <input asp-for="Status" value="0" class="hidden">
                <input asp-for="Unit" value="@currentOrganizationResource.Unit" class="hidden">
                <input value="@DateOnly.FromDateTime(DateTime.UtcNow)" type="hidden" asp-for="@Model.Time">
            </div>
           
            
            <div class="mb-4">
                <label asp-for="OrganizationResourceID" class="block text-sm font-medium text-gray-700 mb-1">Resource Name</label>
                <input asp-for="OrganizationResourceID" value="@currentOrganizationResource.OrganizationID" class="hidden">
                <input id="resource-type" class="w-full p-2 border border-gray-300 rounded-md appearance-none bg-white" value="@currentOrganizationResource.ResourceName" readonly>
            </div>

            <div class="mb-4">
                <label asp-for="Amount" class="block text-sm font-medium text-gray-700 mb-1">Quantity</label>
                <input asp-for="Amount" type="number" id="quantity" placeholder="Enter quantity" class="w-full p-2 border border-gray-300 rounded-md">
            </div>

            <div class="mb-6">
                <label for="project" class="block text-sm font-medium text-gray-700 mb-1">Select a project</label>
                <select name="projectId" id="project" class="w-full p-2 border border-gray-300 rounded-md appearance-none bg-white">
                    <option>Options</option>
                    @foreach (var item in projectsInAOragnization)
                    {
                        <option value="@item.ProjectID">@item.ProjectName</option>
                    }
                </select>
            </div>

            <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-300">Send</button>
        </form>


    </div>
</div>


