@model Dynamics.Models.Models.Organization


@{
    ViewData["Title"] = "Detail";
}

<div class="container my-5 p-5">
    <div class=" w-full mx-auto p-6 bg-white shadow-lg rounded-lg mt-10">
        <div class="py-5">
            <div class="flex flex-col md:flex-row gap-6 mb-6 justify-center">
                <div class="flex-1">
                    <h1 class="text-3xl font-bold mb-4">Organization name: @Model.OrganizationName</h1>
                    <p class="text-sm font-semibold mb-2 ">Leader: @ViewBag.Ceo.UserFullName </p>
                    <p class="text-sm font-semibold mb-2 ">Created: @Model.StartTime </p>
                    <p class="text-sm font-semibold mb-2 ">Members: 12 </p>
                    <p class="text-sm font-semibold mb-2 ">Email: admin... </p>
                    <p class="text-sm font-semibold mb-2 ">
                        Description: @Model.OrganizationDescription
                    </p>

                </div>
                <div class=" flex-1 ">
                    <div class="flex justify-center">
                        <img src="https://via.placeholder.com/300x200" alt="Organization representation" class="w-1\/2 h-1\/2 object-cover rounded ">

                    </div>
                    <p class="text-xl font-bold py-5 text-center">Organization OR</p>

                </div>
                <div class="flex-1 ">
                    <div>
                        <img src="@(Model.OrganizationPictures ?? "https://via.placeholder.com/300x200")" alt="Organization representation" class="w-full h-auto object-cover rounded">
                    </div>
                    <p class="text-xl font-semibold py-5 text-center">Organization representation image</p>
                </div>

                
            </div>

            <div class="flex justify-center my-5 p-0">
                <a asp-action="Edit" asp-controller="Organization" asp-route-organizationId="@Model.OrganizationID">
                <button class="bg-red-500 hover:bg-red-600 text-white font-bold w-auto text-sm px-5 py-4 rounded " type="submit">
                    Update Information
                </button>
                </a>
            </div>
            
        </div>
        
        
        <div class="border-b border-gray-200 flex justify-center my-5">
            <nav class="flex -mb-px gap-6">
                @* <a href="#" class="text-blue-500 border-b-2 border-blue-500 pb-2 px-4 text-xl font-medium">Member</a> *@
                <a href="#" class="text-blue-500 pb-2 px-5 text-2xl font-medium">Member</a>
                <a href="#" class="text-gray-500 pb-2 px-5 text-2xl font-medium">Resources</a>
                <a href="#" class="text-gray-500 pb-2 px-5 text-2xl font-medium">Projects</a>
            </nav>
        </div>
        
        <div class="mt-6 px-5">
            <h1 class="text-3xl font-semibold mb-4 text-center py-5">Organization members</h1>

            <div class="flex justify-center ">
                <ul class="space-y-2 mt-10 w-1\/2">
                    <li class="flex items-center justify-between bg-gray-100 px-5 py-1 my-5 rounded-3 ">
                        <div class="flex items-center gap-2">
                            <span class="text-gray-500 text-sm">1.</span>
                            <img src="@ViewBag.Ceo.UserAvatar" alt="Member avatar" class=" w-16 mr-5 rounded-full">
                            <span class="text-sm mx-5">@ViewBag.Ceo.UserFullName </span>
                        </div>
                        <div class="flex items-center gap-2 ">
                            <span class="bg-blue-500 text-white font-bold px-3 py-3 ml-5 rounded text-xs">Leader</span>
                        </div>
                    </li>

                    <li class="flex items-center justify-between bg-gray-100 px-5 py-1 my-5 rounded-3 ">
                        <div class="flex items-center gap-2">
                            <span class="text-gray-500 text-sm">1.</span>
                            <img src="https://via.placeholder.com/32" alt="Member avatar" class="w-16 mr-5 rounded-full">
                            
                            <span class="text-sm mx-5">Pham Minh Kiét </span>
                            <span class="text-sm mx-5">Member</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <button class="bg-red-500 hover:bg-red-600 font-bold text-white ml-5 px-3 py-3 rounded text-xs">Remove</button>
                        </div>
                    </li>
                    <!-- Repeat the above <li> element 7 more times for the remaining members, removing the Leader span -->
                </ul>
            </div>
            
        </div>
    </div>
</div>

