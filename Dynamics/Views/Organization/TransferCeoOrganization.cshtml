@using Dynamics.Utility
@model Dynamics.Models.Models.Organization
@using Newtonsoft.Json
@inject IHttpContextAccessor Accessor

@{
    ViewData["Title"] = "TransferCeoOrganization";

    //member in organization
    var userOrganizationMembers = @ViewBag.OrganizationMembers as List<User>;
}



<div class="container my-5 p-5 pt-12 flex justify-center items-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-2xl">
        <h1 class="text-2xl font-bold mb-6 text-center">Transfer Organization to continue:</h1>

        <p class="text-sm text-gray-600 mb-6 text-center">
            If you are a member of an organization, tell your leader to accept this request instead!
        </p>

        <form asp-action="TransferCeoOrganization" asp-controller="Organization" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <input asp-for="@Model.OrganizationID" value="@Model.OrganizationID" class="hidden">
                <input type="date" asp-for="@Model.StartTime" class="hidden" name="StartTime" />
                <input asp-for="@Model.OrganizationName" value="@Model.OrganizationName" class="hidden">
                <input asp-for="@Model.OrganizationPictures" class="hidden">
                <textarea asp-for="@Model.OrganizationDescription" value="@Model.OrganizationDescription" class="hidden"></textarea>
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1" for="orgType">Transfer Ceo Organization To:</label>
                <select asp-for="@Model.CEOID" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Choose Ceo for Organization orther" id="orgType">
                    <option value="@Model.CEOID">Select organization type</option>
                    @foreach (var item in @userOrganizationMembers)
                    {
                        if (item.UserID.Equals(@Model.CEOID))
                        {
                            continue;
                        }
                        <option class="text-xl text-black font-semibold" value="@item.UserID">[@item.UserFullName] - [@item.UserEmail] - [@item.UserID]</option>
                    }
                </select>
            </div>

            <div class="flex justify-center">
                <button type="submit" class="px-6 py-2 bg-blue-900 text-white font-medium rounded-md hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Transfer!
                </button>
            </div>
        </form>
    </div>

</div>